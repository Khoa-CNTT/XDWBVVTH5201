<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Dashboard</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    <link href="~/css/admin.css" rel="stylesheet" />
</head>
<body>

    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div class="bg-dark border-end text-white" id="sidebar-wrapper">
            <div class="sidebar-heading text-center py-4">
                <img src="~/images/logoLM.png" alt="Logo" width="100" class="rounded-circle">
                <h5 class="mt-2">Cinema Admin</h5>
            </div>
            <div class="list-group list-group-flush">
                <a href="/AdminHome" class="nav-link text-white bg-dark">
                    <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                    Dashboard
                </a>
                <a href="/Movie" class="nav-link text-white bg-dark">
                    <div class="sb-nav-link-icon"><i class="fas fa-film"></i></div>
                    Quản lý Phim
                </a>
                <a href="/Room" class="nav-link text-white bg-dark">
                    <div class="sb-nav-link-icon"><i class="fas fa-door-open"></i></div>
                    Quản lý Phòng Chiếu
                </a>
                <a href="/Showtimes" class="nav-link text-white bg-dark">
                    <div class="sb-nav-link-icon"><i class="fas fa-calendar-alt"></i></div>
                    Quản lý Lịch Chiếu
                </a>
                <a href="/User" class="nav-link text-white bg-dark">
                    <div class="sb-nav-link-icon"><i class="fas fa-users"></i></div>
                    Quản lý Người Dùng
                </a>
                <a href="/Account/Logout" class="nav-link text-danger bg-dark">
                    <div class="sb-nav-link-icon"><i class="fas fa-sign-out-alt"></i></div>
                    Đăng Xuất
                </a>
            </div>
        </div>

        <!-- Page Content -->
        <div id="page-content-wrapper" class="w-100">
            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom shadow-sm">
                <div class="container-fluid">
                    <h5 class="ms-3 mb-0">Xin chào Admin!</h5>
                </div>
            </nav>

            <div class="container-fluid mt-4">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
