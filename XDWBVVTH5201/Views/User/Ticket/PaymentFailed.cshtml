@{
    ViewData["Title"] = "Thanh toán thất bại";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="container mt-4">
    <div class="card border-danger shadow-sm">
        <div class="card-body text-center p-5">
            <div class="mb-4">
                <i class="fas fa-times-circle text-danger" style="font-size: 5rem;"></i>
            </div>
            <h2 class="card-title mb-3">Thanh toán thất bại!</h2>

            @if (TempData["ErrorMessage"] != null)
            {
                <p class="card-text">@TempData["ErrorMessage"]</p>
            }
            else
            {
                <p class="card-text">Đã có lỗi xảy ra trong quá trình thanh toán.</p>
            }

            <div class="mt-4">
                <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Về trang chủ</a>
                <a href="@Url.Action("Showtimes", "Home")" class="btn btn-primary">Xem lại lịch chiếu</a>
            </div>
        </div>
    </div>
</div>