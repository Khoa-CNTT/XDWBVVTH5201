@model CinemaTest.Models.User.User

@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2 class="text-center mb-4">Đăng nhập</h2>

<form asp-action="Login" method="post" class="mx-auto" style="max-width: 400px;">
    <div class="mb-3">
        <label class="form-label">Tên đăng nhập</label>
        <input name="Username" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Mật khẩu</label>
        <input name="Password" type="password" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary w-100">Đăng nhập</button>
    <div class="text-center mt-3">
        <span>Bạn chưa có tài khoản?</span>
        <a href="/Account/Register" class="text-primary text-decoration-none">Đăng ký ngay</a>
    </div>
</form>

@if (ViewBag.Message != null)
{
    <div class="alert alert-danger mt-3">@ViewBag.Message</div>
}
