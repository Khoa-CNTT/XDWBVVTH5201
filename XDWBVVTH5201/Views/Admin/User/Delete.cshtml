@model CinemaTest.Models.User.User
@{
    ViewData["Title"] = "Xóa người dùng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Xóa người dùng</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/AdminHome">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Quản lý người dùng</a></li>
        <li class="breadcrumb-item active">Xóa</li>
    </ol>

    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-exclamation-triangle me-1"></i>
                    Xác nhận xóa
                </div>
                <div class="card-body">
                    <h5 class="text-danger">Bạn có chắc chắn muốn xóa người dùng này không?</h5>
                    <p class="text-danger">Thao tác này không thể hoàn tác.</p>

                    <div class="table-responsive">
                        <table class="table table-borderless">
                            <tr>
                                <th>ID:</th>
                                <td>@Model.Id</td>
                            </tr>
                            <tr>
                                <th>Tên đăng nhập:</th>
                                <td>@Model.Username</td>
                            </tr>
                            <tr>
                                <th>Email:</th>
                                <td>@Model.Email</td>
                            </tr>
                            <tr>
                                <th>Họ tên:</th>
                                <td>@(string.IsNullOrEmpty(Model.FullName) ? "Chưa cập nhật" : Model.FullName)</td>
                            </tr>
                            <tr>
                                <th>Vai trò:</th>
                                <td>
                                    @if (Model.Role == "Admin")
                                    {
                                        <span class="badge bg-danger">Admin</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-primary">User</span>
                                    }
                                </td>
                            </tr>
                            <tr>
                                <th>Trạng thái:</th>
                                <td>
                                    @if (Model.IsLocked)
                                    {
                                        <span class="badge bg-danger">Đã khóa</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Đang hoạt động</span>
                                    }
                                </td>
                            </tr>
                        </table>
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash me-1"></i>Xóa
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Quay lại
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>