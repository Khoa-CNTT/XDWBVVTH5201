@model CinemaTest.Models.Admin.Room
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Sửa Phòng Chiếu";
}

<h2 class="text-center mb-4">✏️ Sửa Phòng Chiếu</h2>

<form asp-action="Edit" method="post" class="mx-auto" style="max-width: 600px;">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label class="form-label">🏢 Tên phòng</label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">💺 Số lượng ghế</label>
        <input asp-for="SeatCount" type="number" min="1" class="form-control" required />
        <span asp-validation-for="SeatCount" class="text-danger"></span>
    </div>

    <div class="d-flex justify-content-between">
        <a asp-action="Index" class="btn btn-secondary">❌ Hủy</a>
        <button type="submit" class="btn btn-primary">💾 Cập nhật</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
