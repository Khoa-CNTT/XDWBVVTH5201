@model CinemaTest.Models.Admin.Movie
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Thêm Phim Mới";
}

<h2 class="text-center mb-4">🎬 Thêm Phim Mới</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<form asp-action="Create" method="post" enctype="multipart/form-data" class="mx-auto" style="max-width: 600px;">
    <div class="mb-3">
        <label class="form-label">🎬 Tên Phim</label>
        <input asp-for="Title" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">📚 Thể Loại</label>
        <input asp-for="Genre" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">📝 Mô Tả</label>
        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
    </div>

    <div class="mb-3">
        <label class="form-label">⏱️ Thời Lượng (phút)</label>
        <input asp-for="Duration" class="form-control" type="number" min="1" required />
    </div>

    <div class="mb-3">
        <label class="form-label">🎞️ Trailer</label>
        <input asp-for="TrailerUrl" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">🖼️ Chọn Poster</label>
        <input type="file" name="posterFile" class="form-control" accept="image/*" required />
    </div>

    <div class="d-flex justify-content-between">
        <a asp-action="Index" class="btn btn-secondary">❌ Hủy</a>
        <button type="submit" class="btn btn-primary">💾 Thêm Phim</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
